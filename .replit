modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["binutils", "coreutils", "freetype", "gcc", "gcc-unwrapped", "gcc11", "glibc", "glibcLocales", "lcms2", "libGL", "libGLU", "libgcc", "libimagequant", "libjpeg", "libstdcxx5", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Cricket Stance Detection"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_deps"

[[workflows.workflow]]
name = "Cricket Stance Detection"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "LD_LIBRARY_PATH=\"/nix/store/*/lib:/nix/store/*/lib64:$LD_LIBRARY_PATH\" streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "install_deps"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add opencv-python mediapipe plotly"

[[ports]]
localPort = 5000
externalPort = 80
